<% provide(:title, @user.name) %>
<div>
  <table class = "table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-info" %>
        &emsp;<%= l(@first_day, format: :middle) %> 時間管理表&emsp;
        <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-info" %>
      </td>
      <td>指定勤務時間<%= format_basic_info(@user.work_time) %></td>
      <td colspan="2">基本時間<%= format_basic_info(@user.basic_time) %></td>
      <td>初日<%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr>
      <td>所属: <%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名　<%= @user.name %></td>
      <td>コード</td>
      <td>出勤日数  <%=@worked_sum %>日</td>
      <td>締め<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<h4 class: "btn btn-muted">
<% if current_user.admin? %>
  <p><%= link_to "【所属長承認申請のお知らせ】", "#" %></p>
  <p><%= link_to "【勤怠変更申請のお知らせ】", "#" %></p>
  <p><%= link_to "【残業申請のお知らせ】", "#" %></p>
<% end %>
</h4>

<div class = "btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  <%= link_to "CSV入力", "#", class: "btn btn-primary" %>
</div>

<div class = "btn-users-show">
  <%= link_to "勤怠修正ログ（修正済）", "#", class: "btn btn-primary" %>
</div>

<div>
  <table class = "table table-bordered table-condensed table-hover" id = "table-attendances">
    <thead>
      <tr>
        <td rowspan ="3">残業申請</td>
        <td rowspan ="3">日付</td>
        <td rowspan ="3">曜日</td>
        <td colspan ="8">【実績】</td>
        <td colspan ="5">所定外勤務</td>
      </tr>
      <tr>
        <td colspan ="3">出社</td>
        <td colspan ="3">退社</td>
        <td rowspan ="2">在社時間</td>
        <td rowspan ="2">備考</td>
        <td colspan ="2">終了予定時間</td>
        <td rowspan ="2">時間外時間</td>
        <td rowspan ="2">業務処理内容</td>
        <td rowspan ="2">指示者確認㊞</td>
      </tr>
      <tr>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td>
            <%= link_to "残業申請", "#",
            remote: true, class: "btn btn-primary btn-md", date: day.worked_on %>
          </td>
          </td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td>
            <% if day.worked_on.wday == 6 %>
              <font color = "Blue"><%= $days_of_the_week[day.worked_on.wday] %></font>
            <% elsif day.worked_on.wday == 0 %>
              <font color = "Red"><%= $days_of_the_week[day.worked_on.wday] %></font>
            <% else %>
              <%= $days_of_the_week[day.worked_on.wday] %>
            <% end %>
          </td>
          <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%= day.started_at.min.floor_to(15) if day.started_at.present? %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch,
              class: "btn btn-primary btn-block btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= day.finished_at.min.floor_to(15) if day.finished_at.present? %></td>
          <td></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td>累計日数</td>
        <td>総合勤務時間</td>
        <td colspan = "6"></td>
        <td>累計在社時間</td>
        <td></td>
      </tr>
      <tr>
        <td><%= @attendances.count %></td>
        <td><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan = "6"></td>
        <td><%= format("%.2f",@total_working_times.to_f) %></td>
        <td></td>
      </tr>
    </tfoot>
  </table>
</div>