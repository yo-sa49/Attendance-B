<% provide(:title, "拠点一覧") %>
<h1>拠点一覧</h1>

<div>
  <table class="table table-bordered table-condensed table-hover" id="office-table">
    <thead>
      <tr>
        <td></td>
        <td></td>
        <td>拠点番号</td>
        <td>拠点名</td>
        <td>勤怠種類</td>
      </tr>
    </thead>
    <% @offices.each do |office| %>
      <tbody>
        <tr>
          <td class="btn-left">
            <a class="btn btn-primary btn-office-edit" data-toggle="collapse" href="#collapse-edit<%= office.id %>" role="button">
              &emsp;修正&emsp;
            </a>
          </td>
          <td><%= link_to "削除", office, method: :delete,
                  data: { confirm: "#{office.office_name}のデータを削除しますか？" },
                  class: "btn btn-primary" %></td>
          <td><%= office.office_number %></td>
          <td><%= office.office_name %></td>
          <td><%= office.office_type %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>